@model GigsFormViewModel

@{
    ViewData["Title"] = "Add a Gig";
}

<h2>Add a Gig</h2>

<div class="row">
    
    <form asp-action="Create" role="form" method="post">

        <div class="form-group">
            <label asp-for="Venue"></label>
            <input type="text" asp-for="Venue" class="form-control" />
        </div>

        <div class="form-group">
            <label asp-for="Date"></label>
            <input type="text" asp-for="Date" class="form-control" />
        </div>

        <div class="form-group">
            <label asp-for="Time"></label>
            <input type="text" asp-for="Time" class="form-control" />
        </div>

        <div class="form-group">
            <label asp-for="Genre"></label>
            <select class="form-control" asp-items="@(new SelectList(Model.Genres, "Id", "Name"))">
                <option></option>
            </select>
        </div>

        <div class="form-group">
            <label >Thumbnail Image</label>
            <input type="file" class="form-control" />
        </div>

        <button class="btn btn-primary" type="submit">Save</button>

    </form>

</div>